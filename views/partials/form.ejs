    <form action="/filter" method="POST" class="row g-3 mb-4">
      <div class="col-md-4">
        <select name="difficulty" id="dif" class="form-select">
          
          <option value="All" <%= difficulty === 'All' ? 'selected' : '' %>>All</option>
          <option value="EASY" <%= difficulty === 'EASY' ? 'selected' : '' %>>EASY</option>
          <option value="medium" <%= difficulty === 'medium' ? 'selected' : '' %>>medium</option>
          <option value="hard" <%= difficulty === 'hard' ? 'selected' : '' %>>hard</option>
        </select>

        
      </div>
      <div class="col-md-4">
        <select name="company" id="company" class="form-select">
          <option value="All" <%= company === 'All' ? 'selected' : '' %>>All</option>
          <option value="Google" <%= company === 'Google' ? 'selected' : '' %>>Google</option>
          <option value="Amazon" <%= company === 'Amazon' ? 'selected' : '' %>>Amazon</option>
          <option value="Microsoft" <%= company === 'Microsoft' ? 'selected' : '' %>>Microsoft</option>
        </select>

      </div>
      <div class="col-md-4">
        <select name="tag" id="tag" class="form-select">
          <option value="All" <%= tag === 'All' ? 'selected' : '' %>>All</option>
          <option value="Array" <%= tag === 'Array' ? 'selected' : '' %>>Array</option>
          <option value="String" <%= tag === 'String' ? 'selected' : '' %>>String</option>
          <option value="Linked List" <%= tag === 'Linked List' ? 'selected' : '' %>>Linked List</option>
          <option value="Tree" <%= tag === 'Tree' ? 'selected' : '' %>>Tree</option>
          <option value="Graph" <%= tag === 'Graph' ? 'selected' : '' %>>Graph</option>
          <option value="Dynamic Programming" <%= tag === 'Dynamic Programming' ? 'selected' : '' %>>Dynamic Programming</option>
        </select>

      </div>
      <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">Filter</button>
        <button type="button" class="btn btn-secondary" onclick="document.location.href='/home'">Clear Filter</button>
      </div>
    </form>